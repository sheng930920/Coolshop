<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_01"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="20.0dip" >

    <LinearLayout
        android:layout_width="460.0dip"
        android:layout_height="380.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160.0dip"
        android:background="@drawable/bg_login_corner"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90.0dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_login_corner_top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_margin="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="10.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快点咖啡"
                    android:textColor="@color/black"
                    android:textSize="25.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:text="广州酷点网络科技有限公司"
                    android:textSize="15.0sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="210.0dip"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/name"
                style="@style/WordStyleDefault_OrderList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="50.0dip"
                android:cursorVisible="true"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/password"
                style="@style/WordStyleDefault_OrderList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="25.0dip"
                android:cursorVisible="true"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_login_corner_bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/exit"
                android:layout_width="100.0dip"
                android:layout_height="60.0dip"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="20.0dip"
                android:background="@drawable/btn_no_style"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="22.0sp" />

            <Button
                android:id="@+id/login"
                android:layout_width="140.0dip"
                android:layout_height="60.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/btn_blue"
                android:text="确认"
                android:textColor="@color/black"
                android:textSize="22.0sp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>